  "pinp/blogs/step3": {
    "opt": "mono/some",
    "tools": [ "lib/step", "lib/maxi", "lib/mini", "*" ]
  },
  "pinp/blogs/step4": {
    "opt": "mono/all",
    "tools": [ "lib/step", "lib/image", "*" ]
